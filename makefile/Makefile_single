CROSS_COMPILE ?= aarch64-linux-gnu-
CC := gcc
CFLAGS := -Wall -g
LFLAGS :=

OUT := $(shell basename $(shell pwd))
#OUT := phytium_gpio

OBJS := $(patsubst %.c,%.o,$(wildcard *.c))
#OBJS += main.o
#OBJS += phytium_gpio.o
#OBJS += devmem.o

all: $(OUT)

$(OUT): $(OBJS)
	$(CROSS_COMPILE)$(CC) $^ -o $@ $(LFLAGS)

%.o: %.c
	@echo ">>> $<"
	$(CROSS_COMPILE)$(CC) -c $< -o $@ $(CFLAGS)

clean:
	rm -rf *.o $(OBJS) $(OUT)

.PHONY: all clean
