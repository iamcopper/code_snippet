#CROSS_COMPILE ?= aarch64-linux-gnu-
CC := gcc
CFLAGS := -Wall -g
LFLAGS :=

OUT := $(patsubst %.c,%,$(wildcard *.c))

all: $(OUT)

$(OUT): %: %.o
	$(CROSS_COMPILE)$(CC) $^ -o $@ $(LFLAGS)

%.o: %.c
	@echo ">>> $<"
	$(CROSS_COMPILE)$(CC) -c $< -o $@ $(CFLAGS)

clean:
	rm -rf *.o $(OUT)

.PHONY: all clean
