#CROSS_COMPILE ?= aarch64-linux-gnu-
CC := gcc
RM := -rm -f

CFLAGS := -Wall -Werror -g
LFLAGS :=

OUT := $(patsubst %.c,%,$(wildcard *.c))

all: $(OUT)

$(OUT): %: %.o
	$(CROSS_COMPILE)$(CC) $^ -o $@ $(LFLAGS)
	$(CROSS_COMPILE)$(CC) $(LFLAGS) $^ -o $@

%.o: %.c
	@echo ">>> $<"
	$(CROSS_COMPILE)$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *.o $(OUT)

.PHONY: all clean
